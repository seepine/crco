{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["./packages/*"]
    }
  },
  "include": ["./packages/**/*.ts", "./packages/**/*.d.ts", "./packages/**/*.tsx", "./packages/**/*.vue"]
}
